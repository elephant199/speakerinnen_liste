<footer id="footer" class="border-upper pt-5">
  <div class="container">
    <div class="row mt-2">
      <% if current_region.nil? %>
        <div class="col-12 col-md-6 pb-3">
          <span class="">Supported by:</span>
          <%= link_to(image_tag('kombuese_logo.jpg', class:'pl-sm-3', style: "width: 150px"), "https://www.kombuese.org/", class: "",target: 'blank' ) %>
        </div>
        <div class="col-12 col-md-2">
          <ul class="list-unstyled">
            <li class="d-flex">
              <%= link_to t(:about, scope: 'pages.home'), about_path, class: "" %>
            </li>
            <li class="d-flex">
              <%= link_to t(:faq, scope: 'pages.home'), faq_path, class: ""  %>
            </li>
            <li class="d-flex">
              <%= link_to t(:code_of_conduct, scope: 'pages.home'), code_of_conduct_path, class: ""  %>
            </li>
          </ul>
        </div>
        <div class="col-12 col-md-2">
          <ul class="list-unstyled">
            <li class="d-flex">
              <%= t(:twitter, scope: 'pages.footer').html_safe %>
            </li>
            <li class="d-flex">
              <%= t(:instagram, scope: 'pages.footer').html_safe %>
            </li>
            <li class="d-flex">
              <%= t(:facebook, scope: 'pages.footer').html_safe %>
            </li>
          </ul>
        </div>
        <div class="col-12 col-md-2">
          <ul class="list-unstyled">
            <li class="d-flex">
          <!-- Make sure cookie consent is given -->
              <% if cookies[:cookie_consent].blank? %>
                <button type="button" class="btn btn-link px-2 pt-0" data-toggle="modal" data-target="#contactHint">
                  <%= t(:contact, scope: 'pages.footer') %>
                </button>
              <% else %>
                <%= link_to t(:contact, scope: 'pages.footer'), contact_path, class: "" %>
              <% end %>
            </li>
            <li class="d-flex">
              <%= link_to t(:imprint, scope: 'pages.footer'), impressum_path, class: ""%>
            </li>
            <li class="d-flex">
              <%= link_to t(:privacy, scope: 'pages.footer'), privacy_path, class: "" %>
            </li>
          </ul>
        </div>
      <% else %>
        <div class="col-12 col-md-3 pr-5">
          <figure>
            <%= link_to(image_tag('logo_marke_vorarlberg.png', class:'logo-1'), "https://www.vorarlberg-chancenreich.at/",target: 'blank' ) %>
            <figcaption class="pt-4"><%= t(:caption_vorarlberg, scope: 'pages.footer').html_safe %></figcaption>
          </figure>
        </div>
        <div class="col-12 col-md-3 pl-3">
          <figure>
            <%= link_to(image_tag('logo_gleichstellung.png', class:'logo-2'), "https://vorarlberg.at/frauen",target: 'blank' ) %>
            <figcaption class="pt-4"> <%= t(:caption_gleichstellung, scope: 'pages.footer').html_safe %></figcaption>
          </figure>
        </div>
        <div class="row col-12 col-md-4 offset-md-2">
          <div class="col-12 col-md-6">
            <ul class="list-unstyled">
              <li class="d-flex">
                <%= link_to t(:about, scope: 'pages.home'), about_vorarlberg_path %>
              </li>
              <li class="d-flex">
                <%= link_to t(:faq, scope: 'pages.home'), faq_path %>
              </li>
              <li class="d-flex">
                <%= link_to t(:code_of_conduct, scope: 'pages.home'), code_of_conduct_path %>
              </li>
            </ul>
          </div>
          <div class="col-12 col-md-6">
            <ul class="list-unstyled">
              <li class="d-flex">
                <% if cookies[:cookie_consent].blank? %>
                  <button type="button" class="btn btn-link px-2 pt-0" data-toggle="modal" data-target="#contactHint">
                    <%= t(:contact, scope: 'pages.footer') %>
                  </button>
                <% else %>
                  <%= link_to t(:contact, scope: 'pages.footer'), contact_path %>
                <% end %>
              </li>
              <li class="d-flex">
                <%= link_to t(:imprint, scope: 'pages.footer'), impressum_path %>
              </li>
              <li class="d-flex">
                <%= link_to t(:privacy, scope: 'pages.footer'), privacy_path %>
              </li>
            </ul>
          </div>
          <div class="credits col-12 col-md-12">
            <%= t(:photo_credit_vab, scope: 'pages.footer').html_safe %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</footer>
