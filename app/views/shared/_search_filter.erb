<% if @profiles.count > 0 %>
  <div class="row row-cols-4">
    <div class="col-12 col-sm-6 col-md-3">
      <ul id="facet_languages" class="search-aggregation list-unstyled">
        <li><b><%= t(:languages_agg, scope: 'search' ).html_safe %></b></li>
        <li class="<%= 'selected' if !params[:filter_lang] %>">
          <%= link_to(
                t(:all_languages, scope: 'search'),
                filter_params.merge(filter_lang: nil),
                class: "#{'bg-dark text-light' if !params[:filter_lang] }")
          %>
        </li>
        <% aggs_languages.each do |term| %>
          <li>
            <%= link_to(
                  t(term.first, scope: 'iso_639_1').capitalize,
                  filter_params.merge(filter_lang: term.first),
                  class: "#{'bg-dark text-light' if params[:filter_lang]&.downcase == term.first.downcase }")
            %>
            <span class="pl-1"><%= term.last %></span>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col-12 col-sm-6 col-md-3">
      <ul id="facet_countries" class="search-aggregation list-unstyled">
        <li><b><%= t(:countries_agg, scope: 'search' ).html_safe %></b></li>
        <li class="<%= 'selected' if !params[:filter_countries] %>">
          <%= link_to(
                t(:all_countries, scope: 'search'),
                filter_params.merge(filter_countries: nil),
                class: "#{'bg-dark text-light' if !params[:filter_coutries] }")
          %>
        </li>
        <% if aggs_countries.present? %>
          <% aggs_countries.each do |term| %>
            <li>
              <%= link_to(
                    ISO3166::Country.find_country_by_alpha2(term.first).translation(I18n.locale),
                    filter_params.merge(filter_countries: term.first),
                    class: "#{'bg-dark text-light' if params[:filter_countries]&.downcase == term.first.downcase }")
              %>
              <span class="pl-1"><%= term.last %></span>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
    <div class="col-12 col-sm-6 col-md-3">
      <ul id="facet_states" class="search-aggregation list-unstyled">
        <li><b><%= t(:states_agg, scope: 'search' ).html_safe %></b></li>
        <li class="<%= 'selected' if !params[:filter_states] %>">
          <%= link_to(
                t(:all_states, scope: 'search'),
                filter_params.merge(filter_states: nil),
                class: "#{'bg-dark text-light' if !params[:filter_states] }")
          %>
        </li>
        <% if aggs_states.present? %>
          <% aggs_states.each do |term| %>
            <li>
              <%= link_to(
                    all_states[term.first&.to_sym],
                    filter_params.merge(filter_lang: term.first),
                    class: "#{'bg-dark text-light' if params[:filter_lang]&.downcase == term.first.downcase }")
              %>
              <span class="pl-1"><%= term.last %></span>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
    <div class="col-12 col-sm-6 col-md-3">
      <ul id="facet_cities" class="search-aggregation list-unstyled">
        <li><b><%= t(:cities_agg, scope: 'search' ).html_safe %></b></li>
        <li class="<%= 'selected' if !params[:filter_cities] %>">
          <%= link_to(
                t(:all_cities, scope: 'search'),
                filter_params.merge(filter_cities: nil),
                class: "#{'bg-dark text-light' if !params[:filter_cities] }")
          %>
        </li>
        <% if aggs_cities.present? %>
          <% aggs_cities.each do |term| %>
            <li>
              <%= link_to(
                    term.first,
                    filter_params.merge(filter_cities: term.first),
                    class: "#{'bg-dark text-light' if params[:filter_cities]&.downcase == term.first.downcase }")
              %>
              <span class="pl-1"><%= term.last %></span>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

