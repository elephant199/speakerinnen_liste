<%# Git Inspired %>

<div class="col">
  <div class="card bg--white-trans">
    <div class="card-header">
    <h1 class="action_icon"><i class="fa fa-star-o"></i></h1>
      <h1 class="card-title text-left mb-0"><%= t(:"sub_menu_left_title#{'_' + current_region.to_s if current_region}", scope: 'pages.home')%></h1>
    </div>
    <div class="card-body">
      <p class="h5 card-text"><%= t(:"sub_menu_left_text#{'_' + current_region.to_s if current_region}", scope: 'pages.home') %></p>
    </div>
    <div class="card-body bottom">
      <%= t(:"sub_menu_left_link#{'_' + current_region.to_s if current_region}", scope: 'pages.home').html_safe %>
    </div>
  </div>
</div>

